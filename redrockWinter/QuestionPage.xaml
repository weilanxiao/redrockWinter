<Page
    x:Class="redrockWinter.QuestionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:redrockWinter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:redrockWinter.RssFile"
    mc:Ignorable="d">

    <Grid>
        <ListView x:Name="QuestionList" ItemsSource="{Binding Rss}"
                  IsItemClickEnabled="True"
                  ItemClick="QuestionList_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="title" Text="{Binding Title}" TextWrapping="Wrap"/>
                            <TextBlock x:Name="time" Text="{Binding PubDate}" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
